<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="4dp" android:left="4dp" android:right="6dp" android:top="4dp" />
                    <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
                    <stroke android:width="1px" android:color="#aaaaaa" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/arrow_down_icon" />
            </item>
        </layer-list>
    </item>
</selector>